<h1>今日のおすすめごはん</h1>
<% @dishes.shuffle.each_with_index do |dish, i| %>
	<h2><%= (i + 1) %>位</h2>
	<div class="gohan">
		<h3><a href=<%= dish_path(dish) %>><%= dish.name %></a></h3>
		<p><a href=<%= dish.url %>><%= dish.url %></a></p>
		<p><%= dish.memo %></p>
	</div>
	<% if (i + 1) >= 3 %>
		<% break %>
	<% end %>
<% end %>
